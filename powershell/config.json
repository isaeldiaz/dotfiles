{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "console_title_template": "{{.Shell}} in {{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#a3be8c",
          "properties": {
            "text": "❯ "
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#88c0d0",
          "properties": {
            "style": "folder",
            "max_depth": 3
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#81a1c1",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "ignore_submodules": true,
            "branch_icon": " ",
            "template": "git:({{ .Branch }})"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#ebcb8b",
          "properties": {
            "status_template": "{{ if eq .Code 0 }}✔{{ else }}✗ {{ .Code }}{{ end }}",
            "status_separator": " | ",
            "always_enabled": false
          }
        }
      ]
    }
  ]
}
